<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>Body</h4>
    <%= f.text_field :body %>
  </div>

  <%= f.submit "Update Book" %>
<% end %>

<div class="show_and_back">
  <%= link_to 'Edit', edit_book_path(@book) %>
   | 
  <%= link_to 'Back', books_path %>
</div>