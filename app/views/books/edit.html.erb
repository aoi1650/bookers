<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_field :body %>
  </div>

  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<div class="show_and_back">
  <%= link_to 'Edit', edit_book_path(@book) %>
   | 
  <%= link_to 'Back', books_path %>
</div>