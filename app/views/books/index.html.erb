<h1>Books</h1>

<table class="index">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <th><%= book.title %></th>
        <th><%= book.body %></th>
        <th>
          <%= link_to 'Show', book_path(book.id) %>
          <%= link_to 'Edit', edit_book_path(book.id) %>
          <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => 'Are you sure?' %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>

<%# 以下、新規投稿部分 %>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>