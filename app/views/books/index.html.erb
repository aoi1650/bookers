<h1>Books</h1>
<h4>title</h4>
<h4>body</h4>

<% @books.each do |book| %>
  <%= book.title %>
  
  <%= book.body %>
  
  <%= link_to 'Show', book_path(book) %>
  <%= link_to 'Edit', edit_book_path(book) %>
  <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>


<%# 以下、新規投稿部分 %>
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>